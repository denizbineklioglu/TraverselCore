@if(User.Identity.IsAuthenticated){
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Yorum Bırak</h4>
        <p class="mb-4">
            İşaretli alanları doldurmanız gerekmektedir.
        </p>
        <form method="post" asp-action="AddComment" asp-controller="Comment">

            <input type="text" hidden name="AppUserID" value="@ViewBag.userID" />

            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Yorumunuz" required=""
                      spellcheck="false"></textarea>
            </div>
            <div class="input-grids row">
                <div class="form-group col-lg-6">
                    <input type="text" name="DestinationID" hidden class="form-control" placeholder="Destinasyon ID" required=""
                       value="@ViewBag.i">
                </div>
            </div>

            <div class="submit text-right">
                <button class="btn btn-style btn-primary">Yorum Yap</button>
            </div>
        </form>
    </div>
}else{
    <h2>Yorum yapabilmek için üye olmanız gerekli</h2>
}

